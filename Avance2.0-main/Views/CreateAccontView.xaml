<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registro.Views.CreateAccontView"
             Title="CreateAccontView">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#9e9e9e"
                   Offset="0.25" />
            <GradientStop Color="#595959"
                   Offset="100.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout>
        <Label 
            Margin="0,70,0,50"
            Text="Welcome"
            FontSize="45"
            TextColor="#fdfdfd"
            FontFamily="loster"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Margin="65,20,0,10"
            Text="NAME"
            FontSize="12"
            TextColor="#fdfdfd"/>
        <Frame
            CornerRadius="20"
            BackgroundColor="#d1d1d1"
            WidthRequest="350"
            HeightRequest="65">
            <Entry
                Placeholder="Nombre"
                PlaceholderColor="Black"
                BackgroundColor="#d1d1d1"
                WidthRequest="300"
                HeightRequest="60"/>
        </Frame>
        <Label
            Margin="65,20,0,10"
            Text="EMAIL"
            FontSize="12"
            TextColor="#fdfdfd"/>
        <Frame
            CornerRadius="20"
            BackgroundColor="#d1d1d1"
            WidthRequest="350"
            HeightRequest="65">
            <Entry
                PlaceholderColor="Black"
                Placeholder="Correo Electronico"
                BackgroundColor="#d1d1d1"
                WidthRequest="300"
                HeightRequest="60"/>
        </Frame>
        <Label
            Margin="65,20,0,10"
            Text="PASSWORD"
            TextColor="#fdfdfd"
            FontSize="12"
            FontFamily="bold"/>
        <Frame
            CornerRadius="20"
            BackgroundColor="#d1d1d1"
            WidthRequest="350"
            HeightRequest="65">
            <Entry
                Placeholder="Contraseña"
                PlaceholderColor="Black"
                BackgroundColor="#d1d1d1"
                IsPassword="True"
                WidthRequest="300"
                HeightRequest="60"/>
        </Frame>
        <Button
            Margin="0,20,0,0"
            BackgroundColor="Transparent"
            HeightRequest="60"
            WidthRequest="300"
            Text="¿Ya tienes cuenta? Inicia Sesión."
            TextColor="White"
            Clicked="Button_Clicked_1"/>
        <Button
            FontFamily="loster"
            CornerRadius="15"
            BackgroundColor="White"
            Margin="100,0,100,0"
            HeightRequest="65"
            WidthRequest="350"
            Text="Registrar"
            FontSize="12"
            TextColor="Black"
            Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>